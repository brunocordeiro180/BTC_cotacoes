<!DOCTYPE html>
<html>
<head>
	<title>ordens</title>
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	 	<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  	</button>
	  	<a class="navbar-brand" href="/">BITCOIN</a>

	  	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		    <ul class="navbar-nav mr-auto">
		      <li class="nav-item active">
		        <a class="nav-link" href="/cotacoes">Cotações <span class="sr-only">(current)</span></a>
		      </li>
		      <li class="nav-item">
		        <a class="nav-link" href="/Ordens">Ordens</a>
		      </li>
		      <li class="nav-item">
		        <a class="nav-link" href="/criar_ordem">Criar Ordem</a>
		      </li>
		    </ul>
		    <form class="form-inline my-2 my-lg-0">
		    	 <% if(email){%>
		      		<ul class="navbar-nav mr-auto">
				      <li class="nav-item active">
				        <a class="nav-link disabled" href="#"><%= email %></a>
				      </li>
				      <li class="nav-item">
				        <a class="nav-link" href="/Logout">Logout</a>
				      </li>
		      <% } %>
		    </form>
	  	</div>
	</nav>
	<div class="container">
		<h1>Ordens</h1>
		<table class="table">
		<tr>
			<th>Data</th>
			<th>Qtd. BTC</th> 
			<th>Valor por BTC</th>
			<th>Tipo</th>
		</tr>
		<% for(var i = 0; i < Object.keys(ordens).length; i++){ %>
			<tr>
				<td><%= ordens[i].data %></td>
				<td>US$ <%= ordens[i].qtdbtc %></td> 
				<td><%= ordens[i].valorporbtc %></td>
				<td><%= ordens[i].tipo%></td>
			</tr>
		<% } %>
		</table>
	</div>

</body>
</html>